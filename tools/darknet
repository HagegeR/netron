#!/bin/bash

set -e
pushd $(cd $(dirname ${0})/..; pwd) > /dev/null

bold() {
    echo "$(tty -s && tput bold)$1$(tty -s && tput sgr0)" 
}

clean() {
    bold "darknet clean"
    rm -rf "./third_party/src/darknet"
}

sync() {
    bold "darknet sync"
    mkdir -p "./third_party/src"
    if [ -d "./third_party/src/darknet" ]; then
        git -C "./third_party/src/darknet" pull --quiet --prune
    else
        git -C "./third_party/src" clone --quiet --recursive https://github.com/pjreddie/darknet.git
    fi
}

while [ "$#" != 0 ]; do
    command="$1" && shift
    case "${command}" in
        "clean") clean;;
        "sync") sync;;
    esac
done
